// ============================================================================
// FORGEJO THEME
// ============================================================================

global ForgejoTheme {
    // Primary Forgejo orange
    out property <color> primary: #FF6600;
    out property <color> primary-light: #FF8533;
    out property <color> primary-dark: #CC5200;

    // Accent colors
    out property <color> accent-green: #21D07B;
    out property <color> accent-blue: #4183C4;
    out property <color> accent-purple: #8957E5;
    out property <color> accent-red: #E74C3C;

    // Background colors (dark mode)
    out property <color> bg-dark: #161B22;
    out property <color> bg-surface: #21262D;
    out property <color> bg-card: #2D333B;
    out property <color> bg-hover: #373E47;

    // Text colors
    out property <color> text-primary: #E6EDF3;
    out property <color> text-secondary: #8B949E;
    out property <color> text-muted: #6E7681;

    // Border
    out property <color> border: #30363D;
    out property <color> border-light: #444C56;

    // Spacing
    out property <length> spacing-xs: 4px;
    out property <length> spacing-sm: 8px;
    out property <length> spacing-md: 16px;
    out property <length> spacing-lg: 24px;
    out property <length> spacing-xl: 32px;
    out property <length> spacing-2xl: 48px;

    // Border radius
    out property <length> radius-sm: 6px;
    out property <length> radius-md: 8px;
    out property <length> radius-lg: 12px;
}

// ============================================================================
// CUSTOM COMPONENTS
// ============================================================================

// Navigation Link
component NavLink inherits Rectangle {
    in property <string> text: "";
    callback clicked();

    background: transparent;
    height: 40px;

    animate background { duration: 150ms; }

    states [
        hovered when touch.has-hover : {
            background: ForgejoTheme.bg-hover;
        }
    ]

    touch := TouchArea {
        clicked => { root.clicked(); }
    }

    HorizontalLayout {
        padding-left: ForgejoTheme.spacing-md;
        padding-right: ForgejoTheme.spacing-md;

        Text {
            text: root.text;
            font-size: 14px;
            font-weight: 500;
            color: ForgejoTheme.text-secondary;
            vertical-alignment: center;
        }
    }
}

// Primary Button (Orange)
component PrimaryButton inherits Rectangle {
    in property <string> label: "Button";
    callback clicked();

    min-width: 120px;
    height: 44px;
    border-radius: ForgejoTheme.radius-md;
    background: ForgejoTheme.primary;

    animate background { duration: 150ms; }

    states [
        pressed when touch.pressed : {
            background: ForgejoTheme.primary-dark;
        }
        hovered when touch.has-hover : {
            background: ForgejoTheme.primary-light;
        }
    ]

    touch := TouchArea {
        clicked => { root.clicked(); }
    }

    HorizontalLayout {
        padding-left: ForgejoTheme.spacing-lg;
        padding-right: ForgejoTheme.spacing-lg;

        Text {
            text: label;
            font-size: 15px;
            font-weight: 600;
            color: white;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}

// Secondary Button (Outline)
component SecondaryButton inherits Rectangle {
    in property <string> label: "Button";
    callback clicked();

    min-width: 120px;
    height: 44px;
    border-radius: ForgejoTheme.radius-md;
    background: transparent;
    border-width: 2px;
    border-color: ForgejoTheme.primary;

    animate background { duration: 150ms; }

    states [
        pressed when touch.pressed : {
            background: ForgejoTheme.primary.with-alpha(0.2);
        }
        hovered when touch.has-hover : {
            background: ForgejoTheme.primary.with-alpha(0.1);
        }
    ]

    touch := TouchArea {
        clicked => { root.clicked(); }
    }

    HorizontalLayout {
        padding-left: ForgejoTheme.spacing-lg;
        padding-right: ForgejoTheme.spacing-lg;

        Text {
            text: label;
            font-size: 15px;
            font-weight: 600;
            color: ForgejoTheme.primary;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}

// Feature Card
component FeatureCard inherits Rectangle {
    in property <string> title: "";
    in property <string> description: "";
    in property <string> icon: "";

    min-width: 280px;
    min-height: 180px;
    background: ForgejoTheme.bg-card;
    border-radius: ForgejoTheme.radius-lg;
    border-width: 1px;
    border-color: ForgejoTheme.border;

    animate background { duration: 150ms; }
    animate border-color { duration: 150ms; }

    states [
        hovered when touch.has-hover : {
            background: ForgejoTheme.bg-hover;
            border-color: ForgejoTheme.primary;
        }
    ]

    touch := TouchArea {}

    VerticalLayout {
        padding: ForgejoTheme.spacing-lg;
        spacing: ForgejoTheme.spacing-md;

        // Icon circle
        Rectangle {
            width: 48px;
            height: 48px;
            border-radius: 24px;
            background: ForgejoTheme.primary.with-alpha(0.15);

            Text {
                text: icon;
                font-size: 22px;
                color: ForgejoTheme.primary;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }

        Text {
            text: title;
            font-size: 18px;
            font-weight: 600;
            color: ForgejoTheme.text-primary;
            wrap: word-wrap;
        }

        Text {
            text: description;
            font-size: 14px;
            color: ForgejoTheme.text-secondary;
            wrap: word-wrap;
        }
    }
}

// Involvement Card
component InvolvementCard inherits Rectangle {
    in property <string> title: "";
    in property <string> icon: "";

    width: 140px;
    height: 100px;
    background: ForgejoTheme.bg-card;
    border-radius: ForgejoTheme.radius-md;
    border-width: 1px;
    border-color: ForgejoTheme.border;

    animate background { duration: 150ms; }

    states [
        hovered when touch.has-hover : {
            background: ForgejoTheme.bg-hover;
        }
    ]

    touch := TouchArea {}

    VerticalLayout {
        padding: ForgejoTheme.spacing-md;
        spacing: ForgejoTheme.spacing-sm;
        alignment: center;

        Text {
            text: icon;
            font-size: 28px;
            horizontal-alignment: center;
        }

        Text {
            text: title;
            font-size: 13px;
            font-weight: 500;
            color: ForgejoTheme.text-secondary;
            horizontal-alignment: center;
        }
    }
}

// Footer Link
component FooterLink inherits Rectangle {
    in property <string> text: "";
    callback clicked();

    background: transparent;

    touch := TouchArea {
        clicked => { root.clicked(); }
    }

    Text {
        text: root.text;
        font-size: 14px;
        color: touch.has-hover ? ForgejoTheme.primary : ForgejoTheme.text-secondary;
        vertical-alignment: center;

        animate color { duration: 150ms; }
    }
}

