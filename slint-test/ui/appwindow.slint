import { Button, VerticalBox, HorizontalBox, LineEdit, CheckBox, ComboBox, Slider, SpinBox, TabWidget, GridBox, ScrollView } from "std-widgets.slint";

// ============================================================================
// THEME & COLORS
// ============================================================================

global Theme {
    // Primary palette - Modern blue gradient tones
    out property <color> primary: #6366f1;
    out property <color> primary-light: #818cf8;
    out property <color> primary-dark: #4f46e5;

    // Accent colors
    out property <color> accent-green: #10b981;
    out property <color> accent-red: #ef4444;
    out property <color> accent-orange: #f59e0b;
    out property <color> accent-purple: #8b5cf6;
    out property <color> accent-cyan: #06b6d4;
    out property <color> accent-pink: #ec4899;

    // Neutrals
    out property <color> background: #0f172a;
    out property <color> surface: #1e293b;
    out property <color> surface-light: #334155;
    out property <color> surface-lighter: #475569;
    out property <color> border: #334155;
    out property <color> border-light: #475569;

    // Text colors
    out property <color> text-primary: #f1f5f9;
    out property <color> text-secondary: #94a3b8;
    out property <color> text-muted: #64748b;

    // Spacing
    out property <length> spacing-xs: 4px;
    out property <length> spacing-sm: 8px;
    out property <length> spacing-md: 16px;
    out property <length> spacing-lg: 24px;
    out property <length> spacing-xl: 32px;

    // Border radius
    out property <length> radius-sm: 6px;
    out property <length> radius-md: 10px;
    out property <length> radius-lg: 16px;
    out property <length> radius-xl: 24px;
}

// ============================================================================
// CUSTOM COMPONENTS
// ============================================================================

// Styled Card Component
component Card inherits Rectangle {
    in property <string> card-title: "";
    in property <bool> show-header: true;

    background: Theme.surface;
    border-radius: Theme.radius-lg;
    clip: true;

    // Subtle glow effect
    Rectangle {
        x: 0;
        y: 0;
        width: parent.width;
        height: 2px;
        background: @linear-gradient(90deg, Theme.primary-light 0%, Theme.accent-purple 50%, Theme.accent-cyan 100%);
        opacity: 0.6;
    }

    VerticalLayout {
        padding: Theme.spacing-md;
        spacing: Theme.spacing-md;

        if show-header && card-title != "" : HorizontalLayout {
            spacing: Theme.spacing-sm;

            Rectangle {
                width: 4px;
                height: 20px;
                background: Theme.primary;
                border-radius: 2px;
            }

            Text {
                text: card-title;
                font-size: 15px;
                font-weight: 600;
                color: Theme.text-primary;
                vertical-alignment: center;
            }
        }

        @children
    }
}

// Modern styled button
component StyledButton inherits Rectangle {
    in property <string> label: "Button";
    in property <color> btn-color: Theme.primary;
    in property <bool> outline: false;

    callback clicked();

    min-width: 100px;
    height: 38px;
    border-radius: Theme.radius-md;
    background: outline ? transparent : btn-color;
    border-width: outline ? 2px : 0px;
    border-color: btn-color;

    animate background { duration: 150ms; easing: ease-out; }
    animate border-color { duration: 150ms; easing: ease-out; }

    states [
        pressed when touch.pressed : {
            background: outline ? btn-color.with-alpha(0.2) : btn-color.darker(20%);
        }
        hovered when touch.has-hover : {
            background: outline ? btn-color.with-alpha(0.1) : btn-color.darker(10%);
        }
    ]

    touch := TouchArea {
        clicked => { root.clicked(); }
    }

    HorizontalLayout {
        padding-left: Theme.spacing-md;
        padding-right: Theme.spacing-md;

        Text {
            text: label;
            font-size: 14px;
            font-weight: 600;
            color: outline ? btn-color : Theme.text-primary;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}

// Badge/Pill component
component Badge inherits Rectangle {
    in property <string> text: "";
    in property <color> badge-color: Theme.accent-green;

    height: 24px;
    border-radius: 12px;
    background: badge-color.with-alpha(0.2);

    HorizontalLayout {
        padding-left: Theme.spacing-sm;
        padding-right: Theme.spacing-sm;

        Text {
            text: root.text;
            font-size: 12px;
            font-weight: 600;
            color: badge-color;
            vertical-alignment: center;
        }
    }
}

// Animated Progress Bar
component ProgressBar inherits Rectangle {
    in property <float> value: 0;
    in property <color> progress-color: Theme.accent-green;

    height: 8px;
    background: Theme.surface-light;
    border-radius: 4px;
    clip: true;

    Rectangle {
        x: 0;
        width: parent.width * clamp(value / 100, 0, 1);
        height: parent.height;
        border-radius: 4px;
        background: progress-color;

        animate width { duration: 200ms; easing: ease-out; }

        // Shimmer effect
        Rectangle {
            x: parent.width - 30px;
            width: 30px;
            height: parent.height;
            background: @linear-gradient(90deg, transparent 0%, white.with-alpha(0.3) 50%, transparent 100%);
        }
    }
}

// Stat display component
component StatDisplay inherits Rectangle {
    in property <string> label: "";
    in property <string> value: "";
    in property <color> value-color: Theme.primary-light;

    background: Theme.surface-light;
    border-radius: Theme.radius-md;
    height: 70px;

    VerticalLayout {
        padding: Theme.spacing-md;
        spacing: Theme.spacing-xs;

        Text {
            text: label;
            font-size: 12px;
            font-weight: 500;
            color: Theme.text-muted;
        }

        Text {
            text: value;
            font-size: 24px;
            font-weight: 700;
            color: value-color;
        }
    }
}

// Color swatch with hover effect
component ColorSwatch inherits Rectangle {
    in property <color> swatch-color: Theme.primary;
    in property <string> color-name: "";

    width: 80px;
    height: 80px;
    border-radius: Theme.radius-lg;
    background: swatch-color;
    clip: true;

    animate border-width { duration: 150ms; }

    states [
        hovered when touch.has-hover : {
            border-width: 3px;
            border-color: white;
        }
    ]

    touch := TouchArea {}

    // Label at bottom
    Rectangle {
        y: parent.height - 24px;
        width: parent.width;
        height: 24px;
        background: black.with-alpha(0.4);

        Text {
            text: color-name;
            font-size: 10px;
            font-weight: 600;
            color: white;
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}

